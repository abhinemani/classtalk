<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email%>
  <%= f.email_field :email, :class => "", :title => "Email" %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password, :class => 'last', :title => "Password" %></p>

  <%= render :partial => "devise/shared/links" %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me, :class => "first" %> <%= f.label :remember_me%>
  <% end -%>
    <% if devise_mapping.name == :admin %>
      <p><br><%= f.submit "Admin Sign In", :class => "button" %></p>
    <% else %>
        <p><%= f.submit "Sign In", :class => "button" %></p>
    <% end %>
<% end %>