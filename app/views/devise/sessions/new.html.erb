<h2>Sign In</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email%><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, :class => 'last' %></p>

<h5><%= render :partial => "devise/shared/links" %></h5>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me, :class => "first" %> <%= f.label :remember_me%></p>
  <% end -%>

  <p><%= f.submit "Sign In"%></p>
<% end %>

