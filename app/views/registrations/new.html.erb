<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name, "First Name", :id => 'first_name' %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Last Name", :id => 'last_name' %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :display_name, "Display Name" %>
    <%= f.text_field :display_name %>
    <span class="field_description">A short name we display in text messages you send.</span>
  </div>
  <div class="field">
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone_number, "Mobile Number" %>
    <%= f.text_field :phone_number %>
    <span class="field_description">Optional. We will send text messages here.</span>
  </div>

  <p><%= f.label :password, "Password" %>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, "Re-type Password" %>
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign Up", :class => 'button' %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>