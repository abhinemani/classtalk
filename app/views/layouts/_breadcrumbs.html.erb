<h2><%= link_to "Your Groups", groups_url, :class => 'white' %>
	<% if params[:controller] == 'groups' && params[:action] == 'new' || params[:action] == 'create' %>
		> New Group
	<% elsif params[:controller] == 'groups' && (params[:action] == 'edit' || params[:action] == 'update' || params[:action] == 'show') %>
		>
		<%= link_to "#{@group.title}", group_url(@group), :class => 'white' %>
		<% if params[:action] == 'edit' %>
			> Edit
		<% end %>
	<% end %>
</h2>