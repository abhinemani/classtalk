<div id="groups">
    <div id="group_list">
	    <%= render :partial => 'groups/group_list' %>
    </div>
    <div id="group_list_bottom">
        <div class="field_description margin large"><%= @groups.count %> groups</div>
        <%= link_to "Add New Group", new_group_path, :class => 'button' %>
    </div>
</div>
<div id="group_content">
	<div id="group_header">
		<ul id="group_nav">
			<li>
				<a href="javascript:toggleMessage();">Message</a>
			</li>
			<li><%= link_to 'Field Trips', group_destinations_path(@group,@destination) %></li>
			<li>
				<a href="javascript:toggleMembers();">Members</a>
			</li>
			<li><%= link_to 'Settings', edit_group_path(@group) %></li>
		</ul>
		<div id="group_number">
	        <h3 class="right josefin">
	            <%= PhoneValidator::OUTPUT_PRINTF%@group.phone_number.scan(/\d/) %>
	        </h3>
	    </div>
	</div>
	<div id="destinations">
		<h1>Listing destinations</h1>

		<table>
		  <tr>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>

		<% @destinations.each do |destination| %>
		  <tr>
		    <td><%= link_to 'Show', group_destination_path(@group,destination) %></td>
		    <td><%= link_to 'Edit', edit_group_destination_path(@group,destination) %></td>
		    <td><%= link_to 'Destroy', group_destination_path(@group,destination), :confirm => 'Are you sure?', :method => :delete %></td>
		  </tr>
		<% end %>
		</table>

		<br />

		<%= link_to 'New Destination', new_group_destination_path(@group) %>
	</div>
</div>