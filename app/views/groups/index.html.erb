<% if @groups.blank? %>
	<h3>You haven't created any groups.  Please <%= link_to 'click here', new_group_path %> to set one up.</h3>
<% else %>
	<table style="clear: both;">
		<% @groups.each do |group| %>
			<tr>
				<td>
					<div id="content_title">
						<h4><%= group.title %></h4>
					</div>
				</td>
				<td>
					<div class="content_right">
						<h4><%= PhoneValidator::OUTPUT_PRINTF%group.phone_number.scan(/\d/) %></h4>
					</div>
				</td>
				<td>
					<div class="content_right">
						<h4><%= pluralize group.students.count, "member" %></h4>
					</div>
				</td>
				<td>
					<div class="content_right">
						<table class="padded">
					    <tr>
					      <td><%= link_to 'Send Txt', group, :class => 'button oswald' %></td>
					      <td><%= link_to 'Edit', edit_group_path(group), :class => 'button oswald' %></td>
					      <td><%= link_to 'Delete', group, :class => 'button oswald', :confirm => 'Delete this group and all texting history?', :method => :delete %></td>
							<tr>
						</table>
					</div>
				</td>
			</tr>
		<% end %>
		<tr>
			<td><br /><br /><%= link_to "Add New Group", new_group_path, :class => 'button oswald' %>
			</td>
		</tr>
	</table>
<% end %>