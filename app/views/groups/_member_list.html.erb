<% if @group.students.blank? %>
	<h5>There are no members in this group.</h5>
	<%= link_to 'New Member', new_group_student_path(@group), :class => 'button left minor' %>
<% else %>
	<h5>Your message will be sent to <%= pluralize @group.students.count, "member" %>:</h5>
	<ul id="student_list">
    <% for member in @group.students %>
    	<li><%= member.name %> <%= link_to 'X', group_path(@group, :group=>{:students_attributes=>[{:id=>member.id,:_destroy=>1}]}), :confirm => 'Are you sure?', :method => :put, :class => 'button minor secondary' %></li>
    <% end %>
    <li>
      <%= link_to 'New', new_group_student_path(@group), :class => 'button minor' %>
      <%= link_to 'Edit', edit_group_path(@group), :class => 'button minor secondary' %>
    </li>
  </ul>
<% end %>